@model Product

<div class="container py-5">
    <div class="row">
        <!-- Product Image -->
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <img src="@Model.ImageUrl" class="card-img-top rounded" alt="@Model.Title">
            </div>
        </div>

        <!-- Product Details -->
        <div class="col-md-6">
            <h2 class="text-primary text-uppercase fw-bold">@Model.Title</h2>
            <p class="text-muted">Category: <span class="fw-bold">@Model.Category.Name</span></p>

            <div class="mb-3">
                <h4 class="text-warning fw-bold">
                    Price: <span class="text-decoration-line-through text-muted">@Model.ListPrice.ToString("c")</span>
                </h4>
                <h3 class="text-success fw-bold">Now: @Model.Price100.ToString("c")</h3>
            </div>

            <p class="text-dark lead">@Model.Description</p>

            <div class="d-flex align-items-center mb-3">
                <label for="quantity" class="fw-bold me-2">Quantity:</label>
                <input type="number" id="quantity" min="1" value="1" class="form-control w-25 text-center">
            </div>
            <div class="d-flex gap-3">
                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary btn-lg w-50 shadow-sm">
                    <i class="bi bi-arrow-left"></i> Go Back
                </a>
                <button class="btn btn-primary btn-lg w-50 shadow-sm">
                    <i class="bi bi-cart-plus"></i> Add to Cart
                </button>
            </div>
        </div>
    </div>

    <!-- Additional Product Information -->
    
</div>
