@model List<UserCartItem> 

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Subtotal</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="@item.Product.ImageUrl" alt="@item.Product.Title" style="width: 100px;" /></td>
                <td>@item.Product.Title</td>
                <td>@item.Product.Price</td>
                <td>@item.Quantity</td>
                <td>@(item.Product.Price * item.Quantity)</td>  <!-- Calculate Subtotal -->
                <td>
                    <!-- Form to delete the item from the cart -->
                    <form asp-action="RemoveFromCart" method="post">
                        <input type="hidden" name="productId" value="@item.ProductId" />
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<form asp-area="Customer" asp-controller="Cart" asp-action="PayWithKhalti" method="get">
    <button type="submit" class="btn btn-primary">Proceed to Pay with Khalti</button>
</form>

