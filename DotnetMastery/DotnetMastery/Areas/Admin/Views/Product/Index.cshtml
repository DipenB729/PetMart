

@model List<Product>
<partial name="_notification" />
<div class="container">
	<div class="row pt-4 pb-3">
	  <div class="col-6">
		  <h2 class="text-primary">
			  Product List
		  </h2>
	  </div>
		<div class="col-5 text-end">
			<a asp-controller="Product" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-square"></i>create New Product
			</a>
		</div>
    </div>
</div>
<table class="table table-bordered table-striped">

	<thead>
		<tr>
			<th>Title</th>
			<th>ISBN</th>
			<th>Price</th>
			<th>Author</th>
			<th>Category</th>
			<th>Action</th>

		</tr>
	</thead>
	<tbody>
		@foreach (var ob in Model)
		{
			<tr>
                <td>@ob.Title</td>
				<td>@ob.ISBN</td>
				<td>@ob.ListPrice</td>
				<td>@ob.Author</td>
				<td>@ob.CategoryId</td>
				
				
				<td>
					<div class="w-75 btn-group " role="group">
						<a asp-controller="Product" asp-action="Edit" asp-route-id="@ob.Id" class="btn btn-primary mx-2">
							<i class="bi bi-pencil-square"></i>Edit
						</a>
						<a asp-controller="Product" asp-action="Delete" asp-route-id="@ob.Id" class="btn btn-danger mx-2">
							<i class="bi bi-trash3"></i>Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>